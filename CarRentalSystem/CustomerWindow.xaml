<Window x:Class="CarRentalSystem.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRentalSystem"
        mc:Ignorable="d"
        Title="Car-Rental - Okno klienta" Height="600" Width="800" MinWidth="800" MinHeight="600" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" x:Name="HelloLabel" Content="Witaj!" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" FontSize="22"/>
        <DockPanel Background="#FF163EBB"/>
        <Label x:Name="TitleLabel" Content="Menu klienta" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontStyle="Italic" FontWeight="Bold" Foreground="White"/>
    </Grid>
</Window>
